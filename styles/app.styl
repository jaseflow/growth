@import 'lib/reset.css'
@import 'lib/clearfix.css'
@import 'variables'

@import 'components/buttons'

*
    box-sizing: border-box

img
    max-width: 100%

body
    background: $darkBlue
    color: rgba(255,255,255,0.8)
    font-family: Oxygen, sans-serif
    font-size: 0.9375rem
    line-height: 1.5
    font-weight: 500

h1
h2
h3
h4
    color: #fff
    font-weight: 700
    line-height: 1.3
    margin-bottom: 0.75rem

p
    margin-bottom: 1.5rem

h1
    font-size: 1.75rem

h2
    font-size: 1.5rem

h3
    font-size: 1.125rem

a
    color: $green

.text-centered
    text-align: center

.flat
    margin: 0 !important

.container
    width: 100%
    max-width: 75rem
    margin: 0 auto
    padding: 0 1.25rem

.container--small
    max-width: 43.75rem

.container--between
    display: flex
    justify-content: space-between

.logo
    display: flex
    align-items: center
    font-size: 1rem
    color: #fff
    img
        max-width: 3rem
        margin-right: 0.75rem

.logo__label
    text-transform: uppercase
    font-weight: 300
    strong
        font-weight: 700

.logo--landing
    min-height: 50vh
    flex-direction: column
    img
        max-width: 8.75rem
        margin-bottom: 0.75rem
    .logo__label
        font-size: 1rem

.header
    height: 4.375rem
    display: flex
    align-items: center

.login
    display: none
    color: #fff

.hero
    padding: 10vh 0
    margin-bottom: 10vh
    border-bottom: 1px solid rgba(255,255,255,0.25)

.hero__actions
    display: flex
    justify-content: space-between

.hero__footer
    display: none

.footer
    padding: 1.5rem 0

.row
    margin-left: -3rem

.col
    padding-left: 3rem
    width: 100%
    float: left

@media(min-width: 1024px)

    .header
        box-shadow: 0 1px 2px rgba(0,0,0,0.25)
        border-bottom: 1px solid rgba(255,255,255,0.05)

    .logo
        font-size: 1rem
        img
            max-width: 1.5rem
    
    .hero
        min-height: calc(100vh - 4.375rem)
        display: flex
        align-items: center
        flex-direction: column
        padding: 0
        margin: 0
        border-bottom: 10px solid $green
        text-align: center
        position: relative
        &:before
        &:after
            display: block
            content: ''
            position: absolute
            top: 0
            left: 0
            right: 0
            bottom: 0
        &:before
            z-index: 1
            background-image: url(../images/woodworking.jpg)
            background-size: cover
            opacity: 0.05

    .hero__title
        font-size: 2.375rem

    .hero__desc
        font-size: 1.125rem

    .hero__content
    .hero__footer
        position: relative
        z-index: 10
        width: 100%

    .hero__content
        flex: 1
        display: flex
        align-items: center

    .hero__actions
        display: block
        text-align: center
        padding-top: 1.5rem
        .btn:first-child
            margin-right: 1.5rem

    .hero__footer
        display: block
        padding: 1.5rem 0

    .login
        display: inline-block

    .col--half
        width: 50%

    .strip
        height: 80vh
        display: flex
        align-items: center
        justify-content: center

    .strip--alt
        background-color: rgba(0,0,0,0.1)

    .intro
        line-height: 1.8
        font-weight: 300
        font-size: 1.125rem
        color: rgba(255,255,255,0.7)
