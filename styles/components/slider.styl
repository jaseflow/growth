.slider
    position: relative
    background-color: #333

.slider__wrap
    position: relative
    overflow: hidden
    height: 0.5rem

.slider__wrap--thin
    height: 0.3125rem

.slider__progress
    position: absolute
    left: 0
    top: 0
    height: 100%
    width: 100%
    background-color: #ddd

.slider__knob
    position: absolute
    width: 1.5rem
    height: 1.5rem
    top: -0.625rem
    left: 0
    border-radius: 50%
    background-color: #fff
    box-shadow: 0 1px 2px rgba(0,0,0,0.5)

.slider__knob--bar
    top: -0.375rem
    background: 0
    box-shadow: none
    left: -0.75rem
    border-radius: 0
    &:before
        width: 0.1875rem
        height: 80%
        margin: 0 auto
        background: $red 
        display: block
        content: ''
