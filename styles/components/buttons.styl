.btn
    display: inline-block
    padding: 1rem 1.5rem
    font-size: 1rem
    background: $blue
    border: 0
    border-radius: 8px
    font-weight: 700
    color: #fff
    text-decoration: none
    text-align: center
    cursor: pointer

.btn--block
    display: block
    width: 100%

.btn--outline
    background: none
    border: 1px solid $blue
    color: #fff

@media(min-width: 1024px)
    .btn
        padding: 1rem 2rem
