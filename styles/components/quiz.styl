@keyframes popIn
    0%
        opacity: 0
        transform: scale(1)
    50%
        transform: scale(1.1)
    100%
        opacity: 1
        transform: scale(1)

.quiz__question
    margin-bottom: 1.5rem

.quiz__option
    background-color: #fff
    border: 1px solid #ddd
    border-bottom-color: #aaa
    border-radius: 0.25rem
    padding: 1.5rem 0.75rem
    position: relative
    margin-bottom: 0.75rem
    transition-delay: 0.25s
    -webkit-tap-highlight-color: rgba(0,0,0,0)
    &:before
        position: absolute
        top: -0.25rem
        left: -0.25rem
        right: -0.25rem
        bottom: -0.25rem
        border-radius: 0.375rem
        transition-delay: 0
        display: block
        content: ''
        z-index: -1
        transition: all 0.1s ease-in
        opacity: 0

.quiz__option--right
.quiz__option--wrong
    &:before
        opacity: 1

.quiz__option--right
    border-color: $green
    &:before
        background: $green

.quiz__option--wrong
    border-color: $orange
    &:before
        background: $orange

.quiz__results
    display: flex
    align-items: center
    justify-content: center
    min-height: 55vh
    flex-direction: column
    opacity: 0
    transform: translateZ(0)

.quiz__score
    width: 9.375rem
    height: 9.375rem
    background: $green
    display: flex
    align-items: center
    justify-content: center
    border-radius: 5%
    color: #fff
    font-weight: 700
    font-size: 3rem
    border: 5px solid rgba(0,0,0,0.05)
    box-shadow: 0 2px 0 rgba(0,0,0,0.6)

.quiz__actions
    .btn:first-child
        margin-bottom: 1.5rem

.quiz-finished.slide--active
    .quiz__results
        animation: popIn 0.25s 0.3s ease forwards
    .quiz__actions
        opacity: 0
        animation: fadeIn 0.25s 0.6s ease forwards
