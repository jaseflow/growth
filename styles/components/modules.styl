.module
    background-color: #fff
    border: 1px solid #ccc
    box-shadow: 0 1px 0 rgba(0,0,0,0.4)
    border-radius: 4px
    overflow: hidden
    margin-bottom: 1.5rem
    cursor: pointer
    transition: all 0.25s ease
    &:hover
        box-shadow: 0 1px 2px rgba(0,0,0,0.6)

.module__body
.module__footer
    padding: 0.75rem

.module__body
    background-color: #ddd
    min-height: 8.75rem
    display: flex
    align-items: center
    justify-content: center

.module__add
    font-size: 4.5rem !important
    color: #eee

.module__title
    width: 100%
    white-space: nowrap
    text-overflow: ellipsis
    overflow: hidden
    font-size: 0.875rem

.module__subtitle
    font-size: 0.75rem
    color: #999
