.actions
    position: fixed
    top: 100%
    left: 0
    width: 100%
    display: flex
    align-items: center
    justify-content: space-around
    background: #fafafa
    border-top: 1px solid #ddd
    transition: all 0.25s ease

.actions--active
    transform: translateY(-100%)
    transition-delay: 0.25s

.actions__link
    height: 2.75rem
    line-height: 2.7rem
    display: block
    text-align: center
    flex: 1
    font-weight: 700
    color: $blue
    font-size: 0.875rem
    border-left: 1px solid #eee
    &:first-child
        border-left: 0
