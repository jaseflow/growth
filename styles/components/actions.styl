.actions
    transform: translateZ(0)
    position: fixed
    top: 100%
    left: 0
    width: 100%
    background: #f9f9f9
    border-top: 1px solid #ddd
    transition: all 0.25s ease
    height: 100vh
    overflow-y: auto
    z-index: 50
    padding-top: 3.125rem

.actions__nav
    position: fixed
    transition: all 0.25s ease
    top: 100%
    left: 0
    width: 100%
    display: flex
    height: $actionsNavHeight
    align-items: center
    justify-content: center
    background: #fff
    border-top: 1px solid #ddd

.actions__hd
    display: flex
    align-items: center
    justify-content: space-between
    padding: 1.5rem
    border-bottom: 1px solid #ddd
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 3.125rem

.actions__close
    color: $blue
    font-weight: 700

.actions__nav--visible
    transform: translateY(-($actionsNavHeight))
    transition-delay: 0.25s

.actions__body
    padding: 1.5rem

.actions--active
    transform: translateY(-100%)

.actions__link
    height: 2.75rem
    line-height: 2.7rem
    display: block
    text-align: center
    flex: 1
    font-weight: 700
    color: $blue
    font-size: 0.875rem
    border-left: 1px solid #eee
    &:first-child
        border-left: 0
