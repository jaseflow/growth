@keyframes bringInOverlay
    0%
        transform: scale(0.75)
        opacity: 0
    100%
        transform: scale(1)
        opacity: 1

.overlay
    position: fixed
    left: 0
    background-color: rgba(0,0,0,099)
    top: 0
    width: 100%
    height: 100%
    display: none
    opacity: 0
    transform-origin: bottom center
    z-index: 50
    padding: 0.75rem
    align-items: center

.overlay--active
    display: flex
    animation: bringInOverlay 0.25s ease forwards

.overlay__action
    position: absolute
    top: 0.75rem
    right: 0.75rem
    border-radius: 0.125rem
    border: 1px solid #fff
    color: #fff
    text-transform: uppercase
    font-size: 0.625rem
    padding: 0.375rem 0.75rem
    text-decoration: none
    text-align: center
