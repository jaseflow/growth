.header
    height: $headerHeight
    display: flex
    color: #fff
    align-items: center
    z-index: 50
    position: fixed
    width: 100%
    background-color: $altBlue
    box-shadow: 0 1px 0 rgba(0,0,0,0.4)

.header__container > *
    z-index: 10

.header__title
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 1 !important
    text-align: center
    line-height: $headerHeight

.header__action
    position: relative
    transform: translateX(calc(100%+0.75rem))
    transition: all 0.25s ease
    -webkit-will-change: transform

.header__action.visible
    transform: translateX(0)
