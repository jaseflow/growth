extends ./layouts/layout.jade
block title
    title Growth Learning
block content
    .header
        .header__container.container.container--between.container--align
            i.fa.fa-bars(style="font-size: 1.125rem")#headerBtn
            h3.flat.header__title#title Jason Corbett
            .header__action
                .btn.btn--bar.fa.fa-headphones#toggleMode
    .wrapper#wrapper
        .toolbar
            .search
                input.input.full.search__input(placeholder="Search...")
        #course
            .course
                .course__hd
                    h3.course__title.flat Safety and Testing
                    h4.course__level.flat Certificate IV
                .course__body
                    ul.unstyled.course__modules
                        li
                            a.course__module.course__module--active(href="/student/module.html")
                                .container--between Safety in the workplace
                                    strong AHC12342 
                                .progress.course__progress
                                    .progress__bar
                                ul.course__list
                                    li.done
                                        i.fa.fa-check 
                                        | Read theory
                                    li
                                        i.fa.fa-check 
                                        | Quiz
                                    li
                                        i.fa.fa-check 
                                        | Provide practical evidence
                                    li
                                        i.fa.fa-check 
                                        | Assessment

                        li
                            a.course__module(href="#")
                                .container--between Don't forget, safety first
                                    strong AHC42432 
                        li
                            a.course__module(href="#")
                                .container--between Keeping it simple
                                    strong AHC11234
                        li
                            a.course__module(href="#")
                                .container--between Look both ways
                                    strong AHC14233
                        li
                            a.course__module(href="#")
                                .container--between Bend at the knees
                                    strong AHC23212
                        li
                            a.course__module(href="#")
                                .container--between Safety in the workplace
                                    strong AHC12342 
        #module.text
            .module-content(hidden)
                .container.container--alt
                    include:md ../modules/AHC12342/section1.md
            .playlist
                .playlist__tracks
                    .playlist__item
                        strong.playlist__track Introduction
                        small 2:12 
                    .playlist__item
                        strong.playlist__track What is PPE?
                        small 1:54
                    .playlist__item
                        strong.playlist__track Types of PPE
                        small 4:20
                .playlist__footer
                    .playlist__progress
                        .slider
                            .slider__wrap.slider__wrap--thin
                                .slider__progress
                            .slider__knob.slider__knob--bar
                    .playlist__controls
                        i.fa.fa-backward.playlist__control.inactive
                        i.fa.fa-play.playlist__control#playButton(style="font-size: 38px")
                        i.fa.fa-forward.playlist__control
                    .volume
                        i.fa.fa-volume-off
                        .slider
                            .slider__wrap
                                .slider__progress
                            .slider__knob
                        i.fa.fa-volume-up
    .actions#actions
        span.actions__link Take a quiz
        span.actions__link Begin assessment
    .overlay#overlay
        .overlay__content
            .overlay__action#overlayClose Close
            img(src="")#overlayImage
